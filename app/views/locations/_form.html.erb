<h1>Where are you going?!?</h1>

<%= form_for @location, html: {class: 'form_horizontal'} do |f| %>
  <div class="form-group">
		<%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
		<%= f.label :country, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :country, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
		<%= f.label :attraction, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :attraction, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
  
</form>
<% end %>

