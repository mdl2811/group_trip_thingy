<h1>Please type Location Details?!?</h1>

<%= form_for @location, html: {class: 'form_horizontal'} do |f| %>
  <div class="form-group">
		<%= f.label :phone_number, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :phone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
		<%= f.label :longitude, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :longitude, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
		<%= f.label :latitude, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		<%= f.text_field :latitude, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit nil, location_path, class: 'btn btn-primary' %>
  
</form>
<% end %>

